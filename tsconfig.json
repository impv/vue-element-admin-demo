{
    "compilerOptions": {
        "lib": [
            "dom",
            "es5",
            "es2015",
            "es2015.promise"
        ],
        "target": "es5",
        "strict": true,
        "module": "es2015",
        "moduleResolution": "node",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true
    }
